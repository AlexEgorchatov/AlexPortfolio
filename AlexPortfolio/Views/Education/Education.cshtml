@model AlexPortfolio.Models.EducationViewModel

@section AddToHead{
    <link href="@Url.Content("~/Content/portfolio-education.css")" rel="stylesheet" type="text/css" />
}

@section AddToFooter{
    <script src="@Url.Content("~/Scripts/portfolio-education.js")"></script>
}

<div class="d-flex flex-wrap justify-content-center">
    @foreach (var item in Model.EducationItems)
    {
        <div class="p-2">
            <div class="card mx-auto">
                <div class="card-img-top education-picture" style="background-image: url(@Url.Content("../Content/Pictures/" + @item.Picture))"></div>
                <div class="card-body">
                    <h5 class="card-title">@item.University</h5>
                    <h6 class="card-subtitle">@item.Program</h6>
                    <a href="@Url.Action("EducationDetails", "Education", new { educationId = item.EducationId})" class="btn btn-primary">Details</a>
                </div>
            </div>
        </div>
    }
</div>