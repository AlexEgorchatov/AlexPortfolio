@model AlexPortfolio.Models.EducationDetailsViewModel

@section AddToHead{
    <link href="@Url.Content("~/Content/portfolio-education-details.css")" rel="stylesheet" type="text/css" />
}

@*@section AddToFooter{
        <script src="@Url.Content("~/Scripts/portfolio-education-details.js")"></script>
    }*@

<div id="education-details-body-container">
    <p><b>@Model.University</b> <a href="@Model.UniversityLink" target="_blank">(@Model.UniversityLink)</a></p>
    <p><b>Program: </b>@Model.Program (@Model.StartDate-@Model.CompletionDate)</p>
    <p><b>List of courses</b></p>
    <div class="row">
        <div class="col-sm">
            @for (int i = 0; i < Model.Courses.Count / 2; i++)
            {
                <div><span class="education-details-point">&#9898;</span>&nbsp;@Model.Courses[i]</div>
            }
        </div>
        <div class="col-sm">
            @for (int i = (Model.Courses.Count / 2); i < Model.Courses.Count; i++)
            {
                <div><span class="education-details-point">&#9898;</span>&nbsp;@Model.Courses[i]</div>
            }
        </div>
    </div>
</div>