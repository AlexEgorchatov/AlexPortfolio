                            <div class="carousel-item">
                                <div class="work-carousel-item"></div>
                                <div class="carousel-caption d-none d-md-block">
                                    <h5>5th item</h5>
                                    <p>It shows the fifth item</p>
                                </div>
                            </div>
                            <div class="carousel-item">
                                <div class="work-carousel-item"></div>
