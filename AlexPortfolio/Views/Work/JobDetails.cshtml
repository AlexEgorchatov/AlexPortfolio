@model AlexPortfolio.Models.JobDetailsViewModel

@section AddToHead{
    <link href="@Url.Content("~/Content/portfolio-job-details.css")" rel="stylesheet" type="text/css" />
}

@section AddToFooter{
    <script src="@Url.Content("~/Scripts/portfolio-job-details.js")"></script>
}

<div id="job-details-body-container">
    <p><b>@Model.Company</b><a href="@Model.CompanyLink" target="_blank"> @Model.CompanyLink</a></p>
    <p><b>Position: </b>@Model.Position (@Model.Type)</p>
    <p><b>Duration: </b>@Model.Duration days (@Model.StartDate - @Model.CompletionDate)</p>
    <p><b>Address: </b>@Model.Address</p>
    <ul>
        @foreach (var item in Model.DescriptionBulletPoints)
        {
            <li>@item</li>
        }
    </ul>
    <p>@Model.PicturesDescription</p>
    <div class="row d-flex justify-content-center">
        <div id="job-details-carousel" class="carousel slide" data-ride="carousel" data-interval="false">
            <ol class="carousel-indicators">
                @for (int i = 0; i < Model.Pictures.Count; i++)
                {
                    <li data-target="#job-details-carousel" data-slide-to="@i" class="job-details-indicator@(i == 0 ? " active" : "")"></li>
                }
            </ol>

            <div class="carousel-inner">
                @foreach (var item in Model.Pictures)
                {
                    <div class="carousel-item @(Model.Pictures.First() == item ? "active" : "")">
                        <div class="job-details-carousel-item" style="background-image: url(@Url.Content("../Content/Pictures/" + @item))"></div>
                    </div>
                }
            </div>

            @if (Model.Pictures.Any())
            {
                <a class="arrow carousel-control-prev" href="#job-details-carousel" role="button" data-slide="prev">
                    <span id="job-details-image-prev" class="carousel-control-prev-icon job-details-arrow" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="arrow carousel-control-next" href="#job-details-carousel" role="button" data-slide="next">
                    <span id="job-details-image-next" class="carousel-control-next-icon job-details-arrow" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            }

        </div>
    </div>
</div>