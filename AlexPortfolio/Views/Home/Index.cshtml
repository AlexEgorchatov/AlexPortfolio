@model AlexPortfolio.Models.HomeViewModel

@section AddToHead{
    <link href="@Url.Content("~/Content/portfolio-home.css")" rel="stylesheet" type="text/css" />
}

@section AddToFooter{
    <script src="@Url.Content("~/Scripts/portfolio-home.js")"></script>
}

<div id="home-container" class="row">
    <div class="col-md-6 order-md-1 col-12 order-12 d-flex justify-content-center align-self-center">
        <div id="home-content">
            <h1 id="home-greeting">@Model.Greeting</h1>
            <h3 id="home-intro">@Model.Intro</h3>
            <div class="collapse editor-collapse" id="home-editor">
                <div class="form-group">
                    <label for="home-greeting-input">Greeting</label>
                    <input type="text" class="form-control" id="home-greeting-input" required>
                </div>
                <div class="form-group">
                    <label for="home-intro-input">Intro</label>
                    <input type="text" class="form-control" id="home-intro-input" required>
                </div>
            </div>
            <hr />
            <a href="~/Projects/Projects" class="btn btn-primary">My Projects</a>
            <a href="~/Home/Contact" class="btn btn-info">Contact Me</a>
        </div>
    </div>

    <div class="col-md-6 order-md-12 col-12 order-1">
        <div id="home-alex"></div>
    </div>
</div>